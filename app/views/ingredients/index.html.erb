<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to 'Show', recipe_ingredient_path(@recipe.id, ingredient.id) %></td>
        <td><%= link_to 'Edit', edit_recipe_ingredient_path(@recipe.id, ingredient.id) %></td>
        <td><%= link_to 'Destroy', recipe_ingredient_path(@recipe.id, ingredient.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_recipe_ingredient_path(@recipe.id) %>
