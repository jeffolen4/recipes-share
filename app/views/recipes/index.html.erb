<% content_for(:title, "Recipes List | RecipeBlogger") %>

<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>

    <h2>Listing Recipes</h2>


    <form id="recipe-form" class="form-styled" action="/recipes/new" method="post">
      <input id="_method" name="_method" type="hidden" value="post">

      <table class="table table-hover table-stripped table-bordered">
        <thead>
          <tr>
            <th class="col-sm-3">Name</th>
            <th class="col-sm-1">Rating</th>
            <th class="col-sm-1" align="right">Action</th>
          </tr>
        </thead>

        <tbody id="recipe-body">
          <% @recipes.each do |recipe| %>
          <tr id="recipe-<%= recipe.id %>">
            <td><%= recipe.name %></td>
            <td>
              <select id="backing-<%= recipe.id %>" disabled>
                <option value="0" <%= recipe.rating == 0 ? "selected" : nil %>>Bad</option>
                <option value="1" <%= recipe.rating == 1 ? "selected" : nil %>>So-so</option>
                <option value="2" <%= recipe.rating == 2 ? "selected" : nil %>>Ok</option>
                <option value="3" <%= recipe.rating == 3 ? "selected" : nil %>>Pretty Good</option>
                <option value="4" <%= recipe.rating == 4 ? "selected" : nil %>>Excellent</option>
                <option value="5" <%= recipe.rating == 5 ? "selected" : nil %>>Outstanding</option>
              </select>
              <div class="rateit" data-rateit-backingfld="#backing-<%= recipe.id %>"></div>
            </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-primary" type="button" id="btn-show-recipe-<%= recipe.id %>" aria-label="Left Align">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                  </button>
                  <button class="btn btn-primary" type="button" id="btn-edit-recipe-<%= recipe.id %>" aria-label="Left Align">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </button>
                  <button class="btn btn-primary" type="button" id="btn-delete-recipe-<%= recipe.id %>" aria-label="Left Align">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                  </button>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <div class="btn-group">
          <button class="btn btn-primary" type="button" id="btn-add-recipe">Add Recipe</button>
        </div>
      </form>
    </div>
  </div>
